<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="pl.wozniakbartlomiej.receipt.Activities.AddReceiptActivity">

<LinearLayout
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/card" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add users to event"
        android:textColor="@color/colorWhite"
        android:textSize="30dp" />
</LinearLayout>
<LinearLayout
    android:id="@+id/footerLaout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/colorMenuBottomForReceipt"
    android:orientation="horizontal">


    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="onClick_BackToEvents"
        android:padding="10dp"
        android:src="@drawable/back" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:onClick="onClick_AddReceipt"
        android:src="@drawable/plus_black" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/adduser_white" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:onClick="onClick_EventActivity"
        android:padding="10dp"
        android:src="@drawable/balance_black" />
</LinearLayout>
â€¨

<ScrollView
    android:id="@+id/listview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@id/footerLaout"
    android:layout_below="@id/headerLayout">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameAutoCompleteLayout"
            android:layout_gravity="center_horizontal" />

        <FrameLayout
            android:id="@+id/frameAddedUsersLayout"
            android:layout_width="match_parent"
            android:layout_height="200px"/>
    </LinearLayout>

</ScrollView>


</RelativeLayout>


